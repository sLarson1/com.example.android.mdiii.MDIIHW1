	        precision mediump float;
			
			uniform sampler2D u_Sampler_Texture;
			
			varying vec4 v_Color;
			
			varying vec2 v_TexCoord;
				
			
	        void main() {
	          //	gl_FragColor = vertex_color;	// color without having a texture
	           
	          gl_FragColor = (v_Color * texture2D(u_Sampler_Texture, v_TexCoord));       
	        };